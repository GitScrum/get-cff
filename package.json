{
  "name": "get-cff",
  "version": "0.1.2",
  "description": "Getting config from file",
  "license": "MIT",
  "repository": "Scrum/get-cff",
  "homepage": "Scrum/get-cff#readme",
  "bugs": "Scrum/get-cff/issues",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=5"
  },
  "scripts": {
    "version": "conventional-changelog -i changelog.md -s -r 0 && git commit -am \"build: update changelog\"",
    "prepare": "npm run build",
    "build": "rimraf lib && babel src -d lib",
    "test": "jest && codecov"
  },
  "files": [
    "lib/"
  ],
  "keywords": [
    "config",
    "file",
    "js",
    "json",
    "dot file"
  ],
  "dependencies": {
    "flatry": "^1.0.8",
    "js-yaml": "^3.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.0",
    "@commitlint/config-angular": "^6.1.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.0",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-preset-env": "^1.4.0",
    "babel-preset-minify": "^0.3.0",
    "babel-register": "^6.24.1",
    "clinton": "^0.13.0",
    "codecov": "^3.0.0",
    "conventional-changelog-cli": "^1.3.14",
    "eslint": "^4.18.0",
    "eslint-config-xo": "^0.20.1",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-html": "^4.0.2",
    "eslint-plugin-jest": "^21.12.2",
    "eslint-plugin-markdown": "^1.0.0-beta.7",
    "husky": "^1.0.0-rc.13",
    "is-promise": "^2.1.0",
    "jest": "^22.4.0",
    "lint-staged": "^6.1.1",
    "rimraf": "^2.6.1"
  },
  "husky": {
      "hooks": {
        "pre-push": "npm t",
        "pre-commit": "clinton && lint-staged",
        "commit-msg": "commitlint --extends=@commitlint/config-angular -e"
      }
  },
  "lint-staged": {
    "*.{js,html}": "eslint",
    "*.md": "eslint"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 5
          }
        }
      ],
      [
        "minify",
        {
          "mangle": false
        }
      ]
    ],
    "plugins": [
      "array-includes",
      "add-module-exports"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "jest/globals": true
    },
    "plugins": [
      "html",
      "jest",
      "babel",
      "markdown"
    ],
    "extends": [
      "xo"
    ],
    "rules": {
          "indent": [
            2,
            4,
            {
              "SwitchCase": 1
            }
          ],
          "capitalized-comments": "off"
    }
  },
  "clinton": {
    "ignores": [
      "test/**",
      "lib/**"
    ],
    "rules": {
      "pkg-main": [
        "off"
      ],
      "xo": [
        "off"
      ],
      "ava": [
        "off"
      ]
    }
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
