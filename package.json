{
  "name": "get-cff",
  "version": "0.0.0",
  "description": "Getting config from file",
  "license": "MIT",
  "repository": "gitScrum/get-cff",
  "homepage": "gitScrum/get-cff#readme",
  "bugs": "gitScrum/get-cff/issues",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=5"
  },
  "scripts": {
    "precommit": "clinton && lint-staged",
    "commitmsg": "commitlint --extends=@commitlint/config-angular -e",
    "postpublish": "conventional-changelog -i changelog.md -s -r 0 && git commit -am \"chore: Update changelog\"",
    "patch": "np patch --any-branch --no-yarn",
    "minor": "np minor --any-branch --no-yarn",
    "major": "np major --any-branch --no-yarn",
    "prepare": "npm run build",
    "build": "rimraf lib && babel src -d lib",
    "test": "jest && codecov"
  },
  "files": [
    "lib/"
  ],
  "keywords": [
    "config",
    "file",
    "js",
    "json",
    "dot file"
  ],
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^4.2.2",
    "@commitlint/config-angular": "^4.2.1",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-preset-env": "^1.4.0",
    "babel-preset-minify": "^0.2.0",
    "babel-register": "^6.24.1",
    "clinton": "^0.13.0",
    "codecov": "^3.0.0",
    "conventional-changelog-cli": "^1.3.3",
    "eslint": "^4.6.1",
    "eslint-config-xo": "^0.19.0",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-html": "^3.2.1",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-plugin-markdown": "^1.0.0-beta.7",
    "flatry": "^1.0.7",
    "husky": "^0.14.3",
    "is-promise": "^2.1.0",
    "jest": "^21.2.1",
    "lint-staged": "^5.0.0",
    "np": "^2.14.1",
    "rimraf": "^2.6.1"
  },
  "lint-staged": {
    "*.{js,html}": "eslint",
    "./*.md": "eslint --rule indent: [error, 4] ."
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 5
          }
        }
      ],
      [
        "minify",
        {
          "mangle": false
        }
      ]
    ],
    "plugins": [
      "array-includes",
      "add-module-exports"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "jest/globals": true
    },
    "plugins": [
      "html",
      "jest",
      "babel",
      "markdown"
    ],
    "extends": [
      "xo"
    ]
  },
  "clinton": {
    "ignores": [
      "test/**",
      "lib/**"
    ],
    "rules": {
      "pkg-main": [
        "off"
      ],
      "xo": [
        "off"
      ],
      "ava": [
        "off"
      ]
    }
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
