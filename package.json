{
  "name": "get-cff",
  "version": "0.1.3",
  "description": "Getting config from file",
  "license": "MIT",
  "repository": "Scrum/get-cff",
  "homepage": "Scrum/get-cff#readme",
  "bugs": "Scrum/get-cff/issues",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "version": "conventional-changelog -i changelog.md -s -r 0 && git commit -am \"build: update changelog\"",
    "prepare": "npm run build",
    "build": "rimraf lib && babel src -d lib",
    "test": "jest && codecov"
  },
  "files": [
    "lib/"
  ],
  "keywords": [
    "config",
    "file",
    "js",
    "json",
    "dot file"
  ],
  "dependencies": {
    "flatry": "^1.0.12",
    "js-yaml": "^3.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-angular": "^7.0.1",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-minify": "^0.4.3",
    "babel-register": "^6.24.1",
    "clinton": "^0.14.0",
    "codecov": "^3.0.4",
    "conventional-changelog-cli": "^2.0.1",
    "eslint": "^5.4.0",
    "eslint-config-xo": "^0.24.1",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-html": "^4.0.5",
    "eslint-plugin-jest": "^21.21.0",
    "eslint-plugin-markdown": "^1.0.0-beta.8",
    "husky": "^1.0.0-rc.13",
    "is-promise": "^2.1.0",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "rimraf": "^2.6.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm t",
      "pre-commit": "clinton && lint-staged",
      "commit-msg": "commitlint --extends=@commitlint/config-angular -e"
    }
  },
  "lint-staged": {
    "*.{js,html}": "eslint",
    "*.md": "eslint"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 5
          }
        }
      ],
      [
        "minify",
        {
          "mangle": false
        }
      ]
    ],
    "plugins": [
      "array-includes",
      "add-module-exports"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "jest/globals": true
    },
    "plugins": [
      "html",
      "jest",
      "babel",
      "markdown"
    ],
    "extends": [
      "xo"
    ],
    "rules": {
      "indent": [
        2,
        4,
        {
          "SwitchCase": 1
        }
      ],
      "capitalized-comments": "off"
    }
  },
  "clinton": {
    "ignores": [
      "test/**",
      "lib/**"
    ],
    "rules": {
      "pkg-main": [
        "off"
      ],
      "xo": [
        "off"
      ],
      "ava": [
        "off"
      ]
    }
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
